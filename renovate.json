{
    "extends": [
	"config:base"
    ],
    "timezone": "Europe/Berlin",
    "schedule": [
	"after 10pm every weekday",
	"before 5am every weekday",
	"every weekend"
    ],
    "packageRules": [
	{
	    "matchDepTypes": ["devDependencies"],
	    "automerge": true
	},
	{
	    "matchUpdateTypes": ["minor","patch"],
	    "matchCurrentVersion": "!/^0/",
	    "automerge": true
	}
    ]
}
